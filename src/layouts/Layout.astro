---
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "AllPDF.dev - Digital PDF Library",
	description = "AllPDF.dev - Your digital library of PDF books. Download and read popular books instantly."
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content="PDF, books, download, digital library, free books, reading" />
		<meta name="description" content="AllPDF.dev - Your digital library of PDF books. Download and read popular books instantly." />
		<meta name="keywords" content="PDF, books, download, digital library, free books, reading" />
		<title>{title}</title>
		<link rel="canonical" href={Astro.url.href} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content="AllPDF.dev" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url.href} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		
		<!-- Additional head content -->
		<slot name="head" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://allpdf.dev/" />
		<meta property="og:title" content="AllPDF.dev - Digital PDF Library" />
		<meta property="og:description" content="Your digital library of PDF books. Download and read popular books instantly." />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://allpdf.dev/" />
		<meta property="twitter:title" content="AllPDF.dev - Digital PDF Library" />
		<meta property="twitter:description" content="Your digital library of PDF books. Download and read popular books instantly." />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		background: #ffffff;
		color: #000000;
		line-height: 1.6;
	}
	
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		background: #ffffff;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	/* High contrast focus styles for accessibility */
	*:focus {
		outline: 3px solid #0066FF;
		outline-offset: 2px;
	}

	/* Smooth scrolling */
	html {
		scroll-behavior: smooth;
	}
</style>